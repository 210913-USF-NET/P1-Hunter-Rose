@model IEnumerable<Models.Stores>

@{
    ViewData["Title"] = "Index";
}

<h1>Home</h1>
    <p>
        <a asp-action="Create">Create New Store</a>
    </p>
    <p>
        <a asp-action="Customer">Customer List</a>
    </p>
    <p>
        <a asp-action="Inventory">Inventory List</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Location)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Location)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.ActionLink("Inventory", "StoreIndex", "Inventory", new { id = item.Id }) |
                        @Html.ActionLink("Order History", "OrderHistoryOfStore", "OrderDetails", new { StoreId = item.Id })
                    </td>
                </tr>
            }
        </tbody>
    </table>
